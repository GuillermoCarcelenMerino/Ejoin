<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.Ejoin">
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Ejoin">
        <activity
            android:name=".Activities.View.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="${MAPS_API_KEY}" />
        <activity
            android:name=".Activities.View.RecuperarPassword"
            android:exported="true" />
        <activity
            android:name=".Activities.View.AddEvent"
            android:exported="true" />
        <activity
            android:name=".Activities.PasarelaPagoJava"
            android:exported="true" />
        <activity
            android:name=".Activities.FilterActivity"
            android:exported="true" />

        <activity
            android:name=".Activities.View.Chat.ChatActivity"
            android:exported="true"
            android:label="@string/title_activity_chat"
            android:theme="@style/Theme.Ejoin.NoActionBar" />
        <activity
            android:name=".Activities.View.Perfil"
            android:exported="true" />
        <activity
            android:name=".Activities.View.DatosEventos"
            android:exported="true" />
        <activity
            android:name=".Activities.View.Register"
            android:exported="true" />

        <activity
            android:name=".Activities.View.EventosMain.MainActivity"
            android:exported="true" />
    </application>

</manifest>